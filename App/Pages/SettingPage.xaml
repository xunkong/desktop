<Page x:Class="Xunkong.Desktop.Pages.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="using:Xunkong.Desktop.Pages"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xdc="using:Xunkong.Desktop.Controls"
      xmlns:xdm="using:Xunkong.Desktop.Models"
      x:DefaultBindMode="OneWay"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition MaxWidth="1200" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>


        <Grid Grid.ColumnSpan="2"
              Padding="48,0,48,0"
              CornerRadius="4,0,0,4">
            <TextBlock HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       Style="{ThemeResource SubtitleTextBlockStyle}"
                       Text="设置" />
        </Grid>

        <ScrollViewer Grid.Row="1"
                      Grid.ColumnSpan="2"
                      Padding="48,0,48,0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition MaxWidth="1200" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Margin="0,24,0,24" Spacing="8">

                    <Grid Height="120" ColumnSpacing="16">
                        <Grid.RowDefinitions>
                            <RowDefinition />
                            <RowDefinition Height="Auto" />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <Border Grid.RowSpan="2"
                                Height="120"
                                HorizontalAlignment="Left"
                                CornerRadius="8">
                            <Image x:Name="_Image_RecommendWallpaper"
                                   Width="220"
                                   Height="120"
                                   Source="ms-appx:///Assets/Images/96839227_p0_thumb.webp"
                                   Tapped="_Image_RecommendWallpaper_Tapped" />
                        </Border>
                        <TextBlock Grid.Column="1"
                                   Margin="0,4,0,0"
                                   Text="Scighost 的原神工具箱，觉得好用就给个「好评」和「Star」吧。"
                                   TextWrapping="Wrap" />
                        <TextBlock Grid.Column="1"
                                   Margin="0,32,0,0"
                                   TextWrapping="Wrap">
                            <Run FontSize="12"
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                 Text="Sigrixxx - Rest" />
                            <LineBreak />
                            <Run FontSize="12"
                                 Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                 Text="她们太般配了啊！！！" />
                        </TextBlock>
                        <StackPanel Grid.Row="1"
                                    Grid.Column="1"
                                    Orientation="Horizontal"
                                    Spacing="8">
                            <TextBlock Margin="0,0,4,0"
                                       VerticalAlignment="Center"
                                       Text="相关链接" />
                            <HyperlinkButton Content="项目主页" NavigateUri="https://xunkong.cc" />
                            <HyperlinkButton Content="GitHub 项目地址" NavigateUri="https://github.com/xunkong/desktop" />
                            <HyperlinkButton Content="更新记录" NavigateUri="https://go.xunkong.cc/update-history" />
                            <HyperlinkButton Command="{x:Bind vm.CopyDevelopersMailCommand, Mode=OneTime}" Content="联系开发者" />
                            <HyperlinkButton Content="隐私策略" NavigateUri="https://go.xunkong.cc/privacy-policy" />
                        </StackPanel>
                    </Grid>
                    <!--  版本与外观  -->
                    <TextBlock />
                    <TextBlock Style="{ThemeResource SubtitleTextBlockStyle}" Text="版本与外观" />
                    <!--  检查更新  -->
                    <xdc:SettingCard>
                        <xdc:SettingCard.Icon>
                            <SymbolIcon Symbol="Sync" />
                        </xdc:SettingCard.Icon>
                        <xdc:SettingCard.Content>
                            <TextBlock>
                                <Run Text="{x:Bind vm.AppName}" />
                                <LineBreak />
                                <Run FontSize="12"
                                     Foreground="{ThemeResource TextFillColorSecondaryBrush}"
                                     Text="{x:Bind vm.AppVersion}" />
                            </TextBlock>
                        </xdc:SettingCard.Content>
                        <xdc:SettingCard.Selector>
                            <Button HorizontalAlignment="Right"
                                    Command="{x:Bind vm.CheckUpdateCommand}"
                                    Content="检查更新" />
                        </xdc:SettingCard.Selector>
                    </xdc:SettingCard>

